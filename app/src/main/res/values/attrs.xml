<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="AmountView">
        <attr name="value" format="string|reference" />
        <attr name="hint" format="string|reference" />
    </declare-styleable>


    <!-- Attributes for RecyclerView -->
    <eat-comment />

    <declare-styleable name="RecyclerCustomView">
        <attr name="shimmerCount" format="integer" />
        <attr name="shimmerLayout" format="reference" />
        <attr name="emptyText" format="string|reference" />
        <attr name="emptyImage" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="RecyclerEmptyView">
        <attr name="text" format="string|reference" />
        <attr name="image" format="color|reference" />
    </declare-styleable>
</resources>